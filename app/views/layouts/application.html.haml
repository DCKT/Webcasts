!!!
%html
%head
	%title WebCasts
	= stylesheet_link_tag    "application", media: "all"
	= javascript_include_tag "application"
	= csrf_meta_tags

%body

%nav
	= link_to "WebCasts", root_path, class: "brand"

	.pull-right
		- if user_signed_in?
			- if current_user.admin
				= link_to "Nouveau screencast", new_screencast_path, class:'btn btn-warning'
			%a.connected{href: '#'}
				- if @gravatar_image
					= image_tag(@gravatar_image)
				- else
					%img{src: "http://placehold.it/80x80"}
				%span
					= current_user.prenom.capitalize
					= current_user.nom.capitalize

			.panel.hide
				%ul
					%li
						%a{href: "#"} Mes favoris
					%li
						= link_to "DÃ©connexion", destroy_user_session_path, method: :delete
		- else
			= link_to new_user_session_path , class: "login btn btn-warning" do
				.user-icon
					= image_tag('user.png')
				Login

= yield

